#include <iostream>
#include <string.h>
using std::cout;
using std::cin;
int main()
{
int word;
int n=0;
char input[100];//declearing a character class called input
cout<<"Enter any word: ";
cin>>input;
for(int i=0;i<strlen(input);i++) //strlen is the string length of input here, i starts from 0 and increments
{
if (input[i]=='a'||input[i]=='e'||input[i]=='i'||input[i]=='o'||input[i]=='u'||input[i]=='A'||input[i]=='E'||input[i]=='I'||input[i]=='O'||input[i]=='U')
{//|| is the or symbol, so any of these above relations will trigger an increment in n, which is the number of letters
    n++;
}
}
cout<<"The Number of vowels in the word is: "<<n;
}
